<%= form_for Food.new, method: :post do |f| %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :calories %><br>
    <%= f.text_field :calories %>
  </div>

  <div>
    <%= f.label :is_vegan %><br>
    <%= f.text_field :is_vegan %>
  </div>

  <br />

  <%= f.submit 'Submit food' %>

<% end %>

