<h1>
  Editing <%= @food.name.capitalize %>
</h1>

<%= form_for @food, method: :patch do |f| %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :calories %><br>
    <%= f.text_field :calories %>
  </div>

  <div>
    <%= f.label :is_vegan %><br>
    <%= f.text_field :is_vegan %>
  </div>

  <br />

  <%= f.submit 'Update food' %>

<% end %>
